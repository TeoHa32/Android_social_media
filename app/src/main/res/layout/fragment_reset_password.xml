<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ResetPasswordFragment">

    <Button
        android:id="@+id/btnXacNhan"
        android:layout_width="310dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:text="Xác nhận"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtResetPass2" />


    <Button
        android:id="@+id/btnBackToLogin"
        android:layout_width="307dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/custom_plantext"
        android:text="Quay về trang Đăng Nhập"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnXacNhan" />

    <EditText
        android:id="@+id/edtResetPass1"
        android:layout_width="307dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_plantext"
        android:drawableStart="@drawable/ic_lock"
        android:elevation="10dp"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:textColorHint="#7f7f7f"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/edtResetPass2"
        android:layout_width="307dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_plantext"
        android:drawableStart="@drawable/ic_lock"
        android:drawableEnd="@drawable/ic_hide"
        android:elevation="10dp"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#7f7f7f"
        android:longClickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtResetPass1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="223dp"
        android:layout_height="21dp"
        android:layout_marginTop="24dp"
        android:text="Vui lòng nhập mật khẩu mới"
        android:textColor="#575757"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="310dp"
        android:layout_height="49dp"
        android:layout_marginTop="156dp"
        android:rotation="0"
        android:text="Nhập mật khẩu mới"
        android:textColor="#575757"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>