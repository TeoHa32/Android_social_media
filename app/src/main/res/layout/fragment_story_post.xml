        android:layout_height="wrap_content"
        android:weightSum="1"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
